<%= simple_form_for @photo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@photo[:title]) %>
  <%= f.input :image %>
  <%= error_span(@photo[:image]) %>
  <%= f.input :bytes %>
  <%= error_span(@photo[:bytes]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                photos_path, :class => 'btn btn-default' %>
<% end %>
